
@{
    string? currentPage = ViewContext.HttpContext.Request.Path;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LabProject</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico">
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico">
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/core.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme-default.css" asp-append-version="true" />
    
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <link rel="stylesheet" href="~/LabProject.styles.css" asp-append-version="true" />
    <style>
        .menu-sub {
            display: none;
            transition: .3s;
        }
    </style>
    
</head>
<body>
    <div class="d-flex layout-wrapper">
        <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme position-relative" style="max-width: 250px;">
            <nav class="sidebar">
                <div class="app-brand p-2 demo">
                    <a href="/Dashboard" class="app-brand-link">
                        <img src="~/assets/logo.png" class="brand_custom_width" alt="Alternate Text" />
                        <span class="app-brand-text demo menu-text fw-bolder ms-2">MoneyMind</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        menu
                        <i class="bx bx-chevron-left bx-sm align-middle">Menu</i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="d-flex flex-column menu-inner py-1 align-items-end">
                    <!-- MAIN LINKS -->
                    <li class="menu-item @(currentPage == "/Dashboard" ? "active" : "")">

                        <a class="menu-link" asp-area="" asp-controller="Dashboard" asp-action="Index"><i class='bx bxs-dashboard p-2'></i>Dashboard</a>
                    </li>

                    <li class="menu-item @(currentPage.StartsWith("/Category") ? "active" : "")">
                        <a class="menu-link" asp-area="" asp-controller="Category" asp-action="CategoryList">
                            <i class='bx bx-purchase-tag-alt p-2'></i>
                            Categories</a>
                    </li>

                    <li class="menu-item @(currentPage.StartsWith("/Transaction") ? "active" : "")">
                        <a class="menu-link" asp-area="" asp-controller="Transaction" asp-action="TransactionList">
                            <i class='bx bx-transfer p-2'></i>
                            Transaction
                        </a>
                    </li>

                    <!-- ACCOUNT LINKS -->
                    <li class="menu-header small text-uppercase">
                        
                        
                        <span class="menu-header-text">Account</span>
                    </li>
                    <li class="menu-item @(currentPage.EndsWith("/Account") || currentPage.Contains("/Identity/") ? "active open" : "")">
                        
                        <a class="menu-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                            <i class='bx bx-user p-2'></i>Account Settings

                        </a>
                        <ul class="menu-sub">

                            <li class="menu-item @(currentPage == "/Identity/Account/Manage" ? " active" : "")">
                                <a class="menu-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                            </li>
                            <li class="menu-item @(currentPage == "/Identity/Account/Manage/Email" ? " active" : "")">
                                <a class="menu-link" asp-area="Identity" asp-page="/Account/Manage/Email" title="Manage Email">Email</a>
                            </li>
                            <li class="menu-item @(currentPage == "/Identity/Account/Manage/ChangePassword" ? " active" : "")">
                                <a class="menu-link" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Manage Password">Password</a>
                            </li>
                        </ul>
                    </li>
                    
                    <li class="menu-item @(currentPage.EndsWith("/Privacy") ? "active" : "" )">
                        <a class="menu-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class='bx bx-check-shield p-2'></i>Privacy</a>
                    </li>
                    <li class="menu-item mt-auto">
                        <a href="@Url.Page("/Account/Logout", new { area = "Identity" })" class="menu-link">
                            <i class='bx bx-log-out p-2'></i> Logout
                        </a>
                    </li>

                </ul>
            </nav>
        </aside>

        <!-- Główna zawartość -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
        
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    
    <script src="~/js/main.js" asp-append-version="true"></script>
    
    <script src="~/js/helpers.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.js" asp-append-version="true"></script>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
