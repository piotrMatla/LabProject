@model LabProject.Models.Transaction
@{
}

<div class="modal fade" id="DeleteModal-@Model.TransactionId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header flex-wrap mb-3 justify-content-center">
                <h5 class="d-flex modal-title mb-3 text-wrap" id="exampleModalLabel2">Are you sure you want to delete <strong class="text-danger mx-2">@(Model.TransactionName)</strong> of yours transactions?</h5>

                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" name="TransactionId" value="@Model.TransactionId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-outline-secondary" asp-action="TransactionList">Back to List</a>
                </form>

            </div>
        </div>
    </div>
</div>