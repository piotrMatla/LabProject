@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<section class="hero_section hero h-100" data-background="" style="background-image: url(assets/images/backgrounds/hero-bg.png);">
    <div class="container gap-2 px-5 text-white position-relative">
        <header class="ps-5 py-5">
            <h1 class="text-white fw-bolder">Take Control of your finances</h1>
            <p>
                Duis aute irure dolor in reprehenderit in voluptate velit esse cillum
                dolore eu fugiat nulla pariatur.
            </p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">Sign Up Now</a>
        </header>
        <img class="hero_image" src="~/assets/images/hero-image.png" alt="Alternate Text" />
    </div>
</section>

<section id="landingFeatures" class="landing-features">
    <div class="container">
        <div class="text-center mb-4">
            <span class="badge bg-label-primary">Useful Features</span>
        </div>
        <h4 class="text-center mb-1">
            <span class="position-relative fw-extrabold z-1">
                Why Choose MoneyMind?
            </span>
        </h4>
        <p class="text-center mb-12">Take control of your finances with these powerful tools.</p>
        <div class="features-icon-wrapper row gx-0 gy-6 g-sm-12">
            <div class="col-lg-4 col-sm-6 text-center features-icon-box">
                <div class="text-center mb-4">
                    <img src="~/assets/images/coin-in-hand.png" alt="laptop charging">
                </div>
                <h5 class="mb-2">Real-Time Budget Tracking</h5>
                <p class="features-icon-description">Easily monitor your spending and keep your budget under control.</p>
            </div>
            <div class="col-lg-4 col-sm-6 text-center features-icon-box">
                <div class="text-center mb-4">
                    <img src="~/assets/images/wallet.png" alt="transition up">
                </div>
                <h5 class="mb-2">Smart Saving Goal</h5>
                <p class="features-icon-description">Set and achieve savings goals with personalized recommendations.</p>
            </div>
            <div class="col-lg-4 col-sm-6 text-center features-icon-box">
                <div class="text-center mb-4">
                    <img src="~/assets/images/secure.png" alt="edit">
                </div>
                <h5 class="mb-2">Secure and Private </h5>
                <p class="features-icon-description">Your data is protected with industry-standard encryption.</p>
            </div>
        </div>
    </div>
</section>

