                            <div>
                                <h6 class="mb-0">Emily R.</h6>
                                <p class="small text-muted mb-0">Entrepreneur</p>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        
    </div>
</section>

<section id="landingFunFacts" class="section-py landing-fun-facts m-lg-10">
    <div class="container">
        <div class="row gy-6 justify-content-center">
            <div class="text-center mb-4">
                <span class="badge bg-label-primary">How it works</span>
            </div>
            <h4 class="text-center mb-1">
                <span class="position-relative fw-extrabold z-1">
                    Start managing your money
                </span>
                in 3 simple steps
            </h4>
            <div class="col-sm-6 col-lg-3">
                <div class="card border border-primary shadow-none">
                    <div class="card-body text-center">
                        <img src="~/assets/images/1.png" alt="First step" class="mb-4">
                        <h3 class="mb-0">Sign Up</h3>
                        <p class="fw-medium mb-0">
                            Create an account<br> 
                            in less than a minute
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card border border-success shadow-none">
                    <div class="card-body text-center">
                        <img src="~/assets/images/2.png" alt="Second step" class="mb-4">
                        <h3 class="mb-2">Connect Your Accounts</h3>
                        <p class="fw-medium mb-0">
                            Securely link your bank accounts<br> 
                            for seamless tracking
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card border border-info shadow-none">
                    <div class="card-body text-center">
                        <img src="~/assets/images/3.png" alt="Third step" class="mb-4">
                        <h3 class="mb-0">Start Saving</h3>
                        <p class="fw-medium mb-0">
                            Get insights and start achieving<br>
                            your financial goals
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="landingCTA" class="section-py landing-cta p-lg-0 pb-0 w-100">
    <div class="container justify-content-center">
        <div class="align-content-center w-100">
            <div class="text-center pb-10">
                <h3 class="cta-title text-primary fw-bold mb-1">Ready to Get Started?</h3>
                <h5 class="text-body mb-8">Join thousands of users managing their finances with MoneyMind.</h5>
                <a class="btn btn-lg btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Get Started</a>
            </div>
        </div>
    </div>
</section>

    

